{
    "manifest_version": 3,
    "name": "LeetClean",
    "version": "1.0",
    "description": "Customize your LeetCode experience by hiding or unhiding difficulty, acceptance rate, and topics.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "https://leetcode.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    }
}